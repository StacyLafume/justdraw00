    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div class="well">


          <% if (user.local.email) { %>
          <h3>
            User Name:<br> <span class="userName">@<%= user.userName %></span>
            <div class="dropdown">
            <i  onclick="myFunction()" class="dropbtn fas fa-bars"></i>
            
              <div id="myDropdown" class="dropdown-content">

                <a href="/logout" class="signInButton btn btn-default btn-sm">Logout</a>

               <a href="/unlink/local" class="signInButton btn btn-default">Unlink</a>

              </div>
            </div>
            <!-- <strong>id</strong>: <%= user._id %><br>
                                  <strong>email</strong>: <%= user.local.email %><br>
                                  <strong>password</strong>: <%= user.local.password %> -->
          </h3>

          <section class="linkHolder">
            <a href="/draw" class="signInButton btn btn-default btn-sm">Draw!</a>
          </section>

          <section class="linkHolder">
            <a href="/newsfeed" class="signInButton btn btn-default btn-sm">News Feed
            </a>
          </section>

          <% } else { %>
          <a href="/connect/local" class=" btn btn-default">Connect Local</a>
          <% } %>

        </div>
      </div>
      <div class="col-sm-6">

        <section class="grid-container">



          <% for(let i=drawings.length-1; i>=0; i--) {%>

          <% if (drawings[i].user === user.local.email) {%>

          <figure class="grid-item">

            <img src="<%= drawings[i].png %>" alt="">

            <!-- <input type="text" name="" value="">
