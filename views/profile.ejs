            <!-- rendering the title -->
            <figcaption><%= drawings[i].title %></figcaption>

            <i class="hover fas fa-trash-alt" data-drawings="<%= drawings[i].png %>"></i>

            <!-- <a href="/editdraw?pic_id=<%= drawings[i]._id %>"> -->

            <i class="hover far fa-edit" data-drawings="<%= drawings[i].png %>" data-id="<%= drawings[i]._id %>" data-title="<%= drawings[i].title %>"></i>
            <!-- <button ata-drawings="<%= drawings[i].png%>" type="button" name="button"></button> -->

            <!-- </a> -->


          </figure>

          <% } %>

          <% } %>

