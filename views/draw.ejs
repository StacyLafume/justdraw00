  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="draw.css">

  <!-- <link rel="stylesheet" href="drawog.css"> -->


  <link href="https://fonts.googleapis.com/css?family=Ubuntu:300,300i,400,400i,500,500i,700,700i|Monoton|Roboto:100,100i,300,300i,400,400i,500,500i,700,700i&display=swap" rel="stylesheet">

  <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">




  <!-- P5 js  library link-->
  <script src="p5.js"></script>
  <script src="p5.dom.js"></script>
  <script src="p5.sound.js"></script>
  <script src="sketch.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.9.0/p5.js"></script>
</head>

<body>
  <main id="size">



    <div class="dropdown">

      <i onclick="myFunction()" class="dropbtn fas fa-bars"></i>

      <div id="myDropdown" class="dropdown-content">

        <i id="xIcon" class="far fa-window-close"></i>

        <div class="menu-row .menu-display">
          <div class="menu-display">Title</div>
          <div class="menu-input">
            <input id="title" type="text" name="" placeholder="Enter Title" value="">
          </div>
        </div>

        <div class='menu-row'>
          <div class='menu-display '>Time: <span id="display"></span></div>

          <div class='menu-input'>
            <input id="count" type="text" placeholder="Enter Minutes" name="" value="">
          </div>
        </div>
        <div class='menu-row'>
          <div class='menu-three-button'>
            <div class='menu-single-button'><button id="begin" type="button" name="button">Start Timer</button></div>
            <div class='menu-single-button'><button id="save" type="button" name="button">Save</button></div>

            <div class='menu-single-button'>
              <a href="/draw" class="reset">
                <button  type="button" name="button">Reset</button>
              </a>
            </div>

          </div>
        </div>

        <label class="color" for="">Color:</label>

        <input id="color" class="inputcolor" type="color" name="" value="">

        <label for="" class="size">Size:</label>

        <input id="myRange" type="range" name="" value="" min="1" max="100">



        <span class="spanE">Eraser:</span>
        <label class="switch">
          <i id="eraser" class="fas fa-eraser"></i>
          <!-- <input   type="checkbox">
         <span class="slider round"></span> -->
        </label>


        <!--
       <div id="canvasDiv">
       <canvas id="canvasInAPerfectWorld" width="490" height="220"></canvas>
       </div> -->



      </div>

      <!-- <div >Time: <span id="display"></span></div>

      <div><button id="save" type="button" name="button">Save</button></div>

      <a href="/draw" class="reset">
        <button type="button" name="button">Reset</button>
      </a> -->


      <h1>Just Draw</h1>
        
      <canvas id="canvas" width="800px" height="800px">YOUR BROWERS DOES NOT SUPPORT CANNVAS, PLEASE UPGRADE!</canvas>





      <form id="form" class="" action="/pic" method="post">

        <input id="place" hidden type="text" name="url" value="">

        <input hidden type="text" name="user" value="<%= user.local.email %>">

        <input id="setTitle" hidden type="text" name="title" value="">

      </form>

  </main>

  <script src="draw.js"></script>

  <script src="timer.js"></script>

  <script src="main.js"></script>

</body>

</html>
